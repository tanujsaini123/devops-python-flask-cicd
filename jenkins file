pipeline {
    agent any
    stages {
        stage("code clone") {
            steps {
                git url: "https://github.com/tanujsaini123/devops-python-flask-cicd.git", branch: "main"
            }
        }
        stage("build image") {
            steps {
                sh "docker build -t devops-python-flask-cicd ."
            }
        }
        stage("deploy") {
            steps {
                sh "docker compose up -d --build"
            }
        }
    }
}
